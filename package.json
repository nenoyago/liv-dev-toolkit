{
  "name": "neno-packages-workspace",
  "version": "0.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "ci": "pnpm install --frozen-lockfile",
    "ng": "ng",
    "build:packages": "cd projects/design-system && pnpm run build:css && cd ../.. && concurrently \"NODE_OPTIONS='--max-old-space-size=4096' ng build design-system\" \"NODE_OPTIONS='--max-old-space-size=4096' ng build shared-utilities\"",
    "prebuild:packages": "pnpm run check-env && ng build common-utils",
    "storybook": "ng run design-system:storybook",
    "build:storybook": "ng run design-system:build-storybook",
    "prepare": "husky",
    "lint": "pnpm lint",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write \"**/*.{ts,html}\"",
    "check-env": "node ./scripts/check-env.js",
    "changeset:empty": "HUSKY=0 pnpm changeset --empty",
    "changeset:bump": "HUSKY=0 pnpm changeset"
  },
  "packageManager": "pnpm@10.6.5",
  "engines": {
    "node": "22.14",
    "pnpm": "10.6.x",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@tailwindcss/postcss": "^4.1.11",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.10",
    "@angular-eslint/eslint-plugin": "^19.8.1",
    "@angular-eslint/eslint-plugin-template": "^19.8.1",
    "@angular-eslint/template-parser": "^19.8.1",
    "@angular/cli": "^19.2.10",
    "@angular/compiler-cli": "^19.2.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@compodoc/compodoc": "^1.1.30",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/angular": "^9.1.10",
    "@storybook/builder-vite": "^9.1.10",
    "@types/jasmine": "~5.1.8",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "commitizen": "^4.3.0",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "9.1.8",
    "eslint-plugin-unused-imports": "^4.1.4",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "ng-packagr": "^19.2.0",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "storybook": "^9.1.10",
    "style-loader": "^4.0.0",
    "typescript": "~5.7.2",
    "zone.js": "^0.15.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "(*.ts|*.html|*.css|*.scss)": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@compodoc/compodoc",
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "lmdb",
      "msgpackr-extract"
    ]
  }
}